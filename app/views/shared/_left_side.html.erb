<nav class="left-side">

<% if user_signed_in? %>
    <div class="m-4">
        <%= form_tag(all_tweets_path, method: :get) do %>
            <div class="form-group">
                <%= text_field_tag(:search, params[:search], class: "form-control text-13", placeholder: "Search on MyTwitter...") %>
                <div class="mt-3" style="float:left;">
                    <%= submit_tag("Search", :class => "btn btn-primary btn-lg text-13 rounded") %>
                    <%= link_to "Reset", root_path, :class => "btn btn-warning btn-md text-13" %>
                </div>
            </div>
        <% end %>
    </div>
<% end %>
</nav>